@page
@model Gelp.SmartHome.Communication.Web.Views.Login.LoginScreen
@{
    ViewData["Title"] = "LoginScreen";
}
<meta content="text/html; charset=utf-8" http-equiv="Content-Type">
<h1>Login</h1>
<form method="post">
    <label>Name:</label>
    <input type="text" asp-for="Login.Name" placeholder="" />
    <label>Password:</label>
    <input type="password" asp-for="Login.Password" placeholder="" />
    <button type="submit">Submit</button>
</form>